{
    "name": "bibliothekai",
    "description": "My amazing LWC app",
    "version": "0.0.1",
    "author": "David Reed",
    "bugs": "https://github.com/davidmreed/bibliothekai/issues",
    "dependencies": {},
    "devDependencies": {
        "eslint": "^7.11.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.4.0",
        "lwc-services": "^2.3.2",
        "prettier": "^2.1.2",
        "webpack-manifest-plugin": "^3.0.0"
    },
    "engines": {
        "node": ">=10.13.0",
        "npm": ">=6.4.1",
        "yarn": ">=1.9.4"
    },
    "resolutions": {
        "braces": ">=2.3.1"
    },
    "homepage": "https://github.com/davidmreed/bibliothekai",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "./src/**/*.js": [
            "eslint"
        ],
        "**/*.py": [
            "black",
            "flake8"
        ]
    },
    "repository": "https://github.com/davidmreed/bibliothekai",
    "scripts": {
        "build": "lwc-services build -m production -w webpack.config.js",
        "build:development": "lwc-services build -w webpack.config.js",
        "lint": "eslint ./src/**/*.js",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "watch": "lwc-services watch"
    }
}
